@model IEnumerable<TechReviewPoint.Models.Issue>

@{
    ViewBag.Title = "Index";
}

<h1 style="text-align:center">Issues</h1>


<table class="table">
    <thead class="table table-dark">
        <tr style="text-align:center">
            <th>
                @Html.DisplayNameFor(model => model.IssuePost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IssueDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.UserName)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="text-align:center">
                <td>
                    @Html.DisplayFor(modelItem => item.IssuePost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IssueDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.UserName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Issues", new { id = item.IssueID },
                       new { @class = "btn btn-outline-dark" })
                    @Html.ActionLink("Details", "Details", "Issues", new { id = item.IssueID },
                        new { @class = "btn btn-outline-success" })
                    @Html.ActionLink("Delete", "Delete", "Issues", new { id = item.IssueID },
                        new { @class = "btn btn-outline-danger" })

                </td>
            </tr>
        }
    </tbody>
</table>
<p style="text-align:center">
    @Html.ActionLink("Back To Admin Panel", "AdminDashboard", "Admins", null,
    new { @class = "btn btn-warning" })
</p>