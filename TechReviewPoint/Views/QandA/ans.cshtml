@using TechReviewPoint.Models
@model TechReviewPoint.Models.Answer

@{
    ViewBag.Title = "ans";
    //  Layout = "~/Views/Shared/ProductDetailsLayout.cshtml";
}


<!--adding ans-->
<div class="container body-content">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <h2 style="text-align:center">Answers</h2>

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

<form class="row g-3">

    @{
        if (Session["UserSessionID"] != null)
        {
            <div class="col-lg-12">
                @Html.EditorFor(model => model.Solve,
                new
                     {
                         htmlAttributes = new
                         {
                             placeholder = "Enter an Answer",
                   @class = "form-control"
                         }
                     })
                @Html.ValidationMessageFor(model => model.Solve, "", new { @class = "text-danger" })

            </div>
            <br />
            <div class="col-12">
                <input type="submit" value="Post" class="btn btn-success" />
            </div>

        }
    }
</form>

    }
    <!--adding ans-->
    <!--Showing ans-->

    @foreach (var item in ViewData["ANS"] as IEnumerable<Answer>)
    {

        <div class="card my-4">
            <h3 class="card-header">
                @item.User.UserName

            </h3>
            <div class="card-body">
                <h5 class="card-title">
                    @item.Solve
                </h5>
                <p class="card-text">
                   Posted on @item.AnswerDate
                </p>
                
            </div>
        </div>

    }

    <!--end of show-->
</div>