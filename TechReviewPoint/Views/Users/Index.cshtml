@model IEnumerable<TechReviewPoint.Models.User>

@{
    ViewBag.Title = "Index";
}

<h1 style="text-align:center">Users</h1>


<table class="table">
    <thead class="table table-dark">
        <tr style="text-align:center">
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserPassword)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserAdress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserImg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tp_point)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="text-align:center">
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserPassword)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserPhone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserAdress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserImg)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tp_point)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", "Users", new { id = item.UserID },
                   new { @class = "btn btn-outline-success" })
                    @Html.ActionLink("Delete", "Delete", "Users", new { id = item.UserID },
                  new { @class = "btn btn-outline-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
<p style="text-align:center">
    @Html.ActionLink("Back To Admin Panel", "AdminDashboard", "Admins", null,
    new { @class = "btn btn-warning" })
</p>
