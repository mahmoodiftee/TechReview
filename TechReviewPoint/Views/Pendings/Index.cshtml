@model IEnumerable<TechReviewPoint.Models.Pending>

@{
    ViewBag.Title = "Index";
   // Layout = null;
}

<h1 style="text-align:center">Pending Product Request</h1>

<table class="table">
    <thead class="table table-dark">
        <tr style="text-align:center">
            <th>
                @Html.DisplayNameFor(model => model.Mail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.UserName)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="text-align:center">
                <td>
                    @Html.DisplayFor(modelItem => item.Mail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.UserName)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", "Pendings", new { id = item.PendingID },
                          new { @class = "btn btn-outline-success" })
                    @Html.ActionLink("Delete", "Delete", "Pendings", new { id = item.PendingID },
                         new { @class = "btn btn-outline-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
<p style="text-align:center">
    @Html.ActionLink("Back To Admin Panel", "AdminDashboard", "Admins", null,
    new { @class = "btn btn-warning" })
</p>


